<div class="col-lg-12">
    {{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
    {{else}}

    {{/each}}
    <h2>Editar categoria</h2>
    <div class="card">
        <div class="card-body">
            <form action="/admin/categories/store" method="POST">
            <input type="hidden" name="id" value="{{categorie._id}}">
                <div class="form-group">
                    <label for="name">Nome da categoria</label>
                    <input type="text" name="name" class="form-control" id="name" placeholder="Categoria" value="{{categorie.name}}">
                </div>
                <div class="form-group">
                    <label for="slug">Slug</label>
                    <input type="text" name="slug" class="form-control" id="slug" placeholder="Slug" value="{{categorie.slug}}">
                </div>
                <button type="submit" class="btn btn-primary">Editar categoria</button>
            </form>
        </div>
    </div>
</div>